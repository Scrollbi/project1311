<Window x:Class="project2.Windows.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtName" Margin="0,0,0,5"/>

        <!-- Категория -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Категория:" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtCategory" Margin="0,0,0,5"/>

        <!-- Производитель -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Производитель:" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtManufacturer" Margin="0,0,0,5"/>

        <!-- Цена -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Цена:" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtPrice" Margin="0,0,0,5"/>

        <!-- Скидка -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Скидка (%):" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtDiscount" Margin="0,0,0,5"/>

        <!-- Количество на складе -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="На складе:" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtStockQuantity" Margin="0,0,0,5"/>

        <!-- Изображение -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Изображение:" Margin="0,0,10,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,5">
            <Button x:Name="BtnSelectImage" Content="Выбрать..." Click="BtnSelectImage_Click" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtImagePath" Text="Не выбрано" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Предпросмотр изображения -->
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Предпросмотр:" Margin="0,0,10,5"/>
        <Border Grid.Row="7" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" 
                Background="LightGray" Width="150" Height="120" Margin="0,0,0,5">
            <Image x:Name="imgPreview" Stretch="Uniform"/>
        </Border>

        <!-- Сообщение о размере -->
        <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="Рекомендуемый размер: 300×200 пикселей" 
                   FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnSave" Content="Сохранить" Click="BtnSave_Click" Width="80" Margin="0,0,10,0"/>
            <Button x:Name="BtnCancel" Content="Отмена" Click="BtnCancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>